{
	"name": "jpeg-xl",
	"displayName": "JPEG XL",
	"description": "JPEG XL support in VS Code",
	"version": "1.0.14",
	"publisher": "printfn",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Visualization",
		"Other"
	],
	"keywords": [
		"jxl",
		"jpeg",
		"jpg",
		"jpeg-xl",
		"image"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/printfn/jpeg-xl-vscode"
	},
	"homepage": "https://github.com/printfn/jpeg-xl-vscode",
	"license": "GPL-3.0-or-later",
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "jxl",
				"extensions": [
					".jxl"
				],
				"icon": {
					"light": "./file-icons/image.svg",
					"dark": "./file-icons/image.svg"
				},
				"mimetypes": ["image/jxl"]
			}
		],
		"customEditors": [
			{
				"viewType": "jpeg-xl.JXLViewer",
				"displayName": "JPEG XL Viewer",
				"selector": [
					{
						"filenamePattern": "*.jxl"
					}
				],
				"priority": "default"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.mts",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.mts --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.mts --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint .",
		"test": "vscode-test",
		"format": "prettier -w ."
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.3.1",
		"@types/vscode": "^1.100.0",
		"@typescript-eslint/eslint-plugin": "^8.43.0",
		"@typescript-eslint/parser": "^8.43.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"esbuild": "^0.25.9",
		"eslint": "^9.35.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0"
	},
	"dependencies": {
		"jxl-oxide-wasm": "^0.12.4"
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid",
		"singleQuote": true
	}
}
